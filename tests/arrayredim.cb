Print "##############################"
Print "########### TEST 1 ###########"
Print "##############################"
Print "# 1-dimensional integer array"

Dim ARRAY1(5)

Print "------"
For i=0 To 5
    Print i + " => " + ARRAY1(i)
Next i

Print "------"
For i=0 To 5
    Print "Setting ARRAY1(" + i + ") => " + i
    ARRAY1(i) = i
Next i

Print "------"
For i=0 To 5
    Print i + ". -- " + ARRAY1(i)
Next i

Print "------"
Print "ReDim ARRAY1 to size 10"
ReDim ARRAY1(10)

Print "------"
For i=0 To 10
    Print i + " => " + ARRAY1(i)
Next i

Print "------"
For i=0 To 10
    Print "Setting ARRAY1(" + i + ") => " + (100 + i)
    ARRAY1(i) = 100 + i
Next i

Print "------"
For i=0 To 10
    Print i + " => " + ARRAY1(i)
Next i

ClearArray OFF

Print "------"
Print "ReDim ARRAY1 to size 20, ClearArray OFF"
ReDim ARRAY1(20)

Print "------"
For i=0 To 20
    Print i + " => " + ARRAY1(i)
Next i

Print "------"
Print "All done. Press any key to continue to next test..."

WaitKey
